{
  "name": "@davesag/mock-algolia",
  "version": "0.0.10",
  "description": "A mock server for Algolia Search and Indexing",
  "author": "Dave Sag <davesag@gmail.com>",
  "contributors": [
    "Anas M (https://github.com/anasanzari)"
  ],
  "type": "commonjs",
  "license": "MIT",
  "funding": {
    "type": "github",
    "url": "https://github.com/sponsors/davesag"
  },
  "private": true,
  "main": "index.js",
  "engines": {
    "node": ">= 12.18.2"
  },
  "directories": {
    "lib": "src",
    "test": "test"
  },
  "scripts": {
    "eslint-check": "eslint --print-config src/index.js | eslint-config-prettier-check",
    "lint": "eslint .",
    "prettier": "prettier --write '**/*.{js,json,md}'",
    "seed": "NODE_PATH=. node tasks/seed",
    "start": "NODE_PATH=. node index.js",
    "test": "npm run test:unit",
    "test:all": "npm run test:unit; npm run test:server",
    "test:unit": "NODE_ENV=test NODE_PATH=. mocha ./test/unit/ --require ./test/unitTestHelper.js --recursive",
    "test:unit:cov": "NODE_ENV=test NODE_PATH=. nyc mocha ./test/unit/ --require ./test/unitTestHelper.js --recursive",
    "test:server": "NODE_ENV=test NODE_PATH=. mocha ./test/server/ --require ./test/serverTestHelper.js --file ./test/serverTestInit.js --recursive ",
    "snyk-protect": "snyk protect"
  },
  "keywords": [
    "mock",
    "algolia"
  ],
  "repository": "https://github.com/davesag/mock-algolia.git",
  "bugs": {
    "url": "https://github.com/davesag/mock-algolia/issues"
  },
  "homepage": "https://github.com/davesag/mock-algolia#README",
  "dependencies": {
    "body-parser": "^1.19.0",
    "cors": "^2.8.5",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "http-status-codes": "^2.1.4",
    "node-http-error": "^2.0.0",
    "route-async": "^1.0.7",
    "swagger-routes-express": "^3.3.1",
    "swagger-ui-express": "^4.1.4",
    "traverse-folders": "^1.1.2",
    "uuid": "^8.3.1",
    "yamljs": "^0.3.0"
  },
  "devDependencies": {
    "chai": "^4.2.0",
    "chai-almost": "^1.0.1",
    "chai-as-promised": "^7.1.1",
    "eslint": "^8.2.0",
    "eslint-config-prettier": "^8.0.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-mocha": "^10.0.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-promise": "^5.1.1",
    "husky": "^7.0.0",
    "lint-staged": "^12.1.4",
    "mocha": "^9.0.0",
    "mock-req-res": "^1.2.0",
    "nyc": "^15.1.0",
    "prettier": "^2.1.2",
    "proxyquire": "^2.1.3",
    "sinon": "^12.0.1",
    "sinon-chai": "^3.5.0",
    "snyk": "^1.419.1",
    "supertest": "^6.1.6"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "proseWrap": "never",
    "arrowParens": "avoid",
    "trailingComma": "none",
    "printWidth": 100
  },
  "lint-staged": {
    "**/*.{js,json,md}": [
      "prettier --write"
    ]
  },
  "nyc": {
    "check-coverage": true,
    "per-file": true,
    "lines": 100,
    "statements": 100,
    "functions": 100,
    "branches": 100,
    "include": [
      "src/**/*.js"
    ],
    "exclude": [
      "src/index.js",
      "src/api/v1/**/*.js",
      "src/utils/logger.js"
    ],
    "reporter": [
      "lcov",
      "text"
    ],
    "all": true,
    "cache": true
  },
  "snyk": true
}
